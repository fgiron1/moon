[package]
name = "osint-correlator"
version = "0.1.0"
edition = "2021"
authors = ["OSINT Commander"]
description = "A lightweight OSINT data correlation tool"

[dependencies]
# Core functionality
clap = { version = "4.0", features = ["derive"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
anyhow = "1.0"  # Error handling
log = "0.4"
env_logger = "0.10"
chrono = { version = "0.4", features = ["serde"] }

# Data processing
csv = "1.1"
regex = "1.5"
glob = "0.3"

# Visualization
petgraph = "0.6"
dot = "0.1"  # For GraphViz DOT format output

# Reporting
handlebars = "4.3"
base64 = "0.13"

# HTTP client for checking links
reqwest = { version = "0.11", features = ["blocking", "json"] }

# Progress indicators
indicatif = "0.17"

# Parallelism
rayon = "1.5"

[profile.release]
lto = true
codegen-units = 1
opt-level = 3
panic = "abort"
strip = true  # Strip symbols for smaller binary size